@{
    ViewData["Title"] = "Home Page";
}

<div class="card p-4 shadow">
    <h2 class="text-center mb-4">Login do Professor</h2>
    <form>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Digite seu email">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" id="password" placeholder="Digite sua senha">
        </div>
        <a class""></a>
        <button type="submit" asp-controller="Professor" asp-action="Welcome" class="btn btn-primary w-100">Entrar</button>
    </form>

    <div class="text-center mt-3">
        <p>Não tem uma conta? <a href="Professor/Cadastro" class="text-decoration-none">Cadastre-se</a></p>
    </div>
</div>
